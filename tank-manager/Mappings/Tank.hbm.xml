<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="tank_manager.Domain" assembly="tank-manager">
  <class name="Tank" table="Tank">
    <id name="id" unsaved-value="0">
      <column name="id" not-null="true" />
      <generator class="identity"/>
    </id>
    <one-to-one name="tool" class="Tool" cascade="all" constrained="true" fetch="select" />
    <one-to-one name="tower" class="Tower" cascade="all" constrained="true" fetch="select" />
    <one-to-one name="engine" class="Engine" cascade="all" constrained="true" fetch="select" />
    <one-to-one name="crawler" class="Crawler" cascade="all" constrained="true" fetch="select" />
    <one-to-one name="radio" class="Radio" cascade="all" constrained="true" fetch="select" />
    <property name="price" />
    <property name="name" />
    <property name="experience" />
    <property name="strength" />
    <property name="massa" />
    <property name="reservation" />
    <property name="speed" />
    <property name="turning" />
    <property name="level" />
  </class>
</hibernate-mapping>